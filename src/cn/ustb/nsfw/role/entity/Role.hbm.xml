<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="cn.ustb.nsfw.role.entity.Role" table="t_role">
		<id name="roleId" type="java.lang.String">
			<column name="role_id" length="32"/>
			<generator class="uuid.hex"></generator>
		</id>
		<property name="name" type="java.lang.String">
			<column name="name" length="20" not-null="true"></column>
		</property>
		<property name="state" type="java.lang.String">
			<column name="state" length="1"></column>
		</property>
		<set name="rolePrivileges" lazy="true" cascade="save-update,delete" inverse="true"><!-- 不通过一的一方维护 -->
			<key>
				<column name="role_id" not-null="true"></column>
			</key>
			<one-to-many class="cn.ustb.nsfw.role.entity.RolePrivilege"/>
		</set>
	</class>
</hibernate-mapping>